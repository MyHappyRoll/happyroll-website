---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Hero from "../components/sections/Hero.astro";
import Need from "../components/sections/Need.astro";
import BenefitsTeaser from "../components/sections/BenefitsTeaser.astro";
import FeaturesBenefits from "../components/sections/FeaturesBenefits.astro";
import Solution from "../components/sections/Solution.astro";
import CallToAction from "../components/sections/CallToAction.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
	<main>
		<Header />
		<div class="section-container flex flex-column">
			<Hero />
			<Need />
			<BenefitsTeaser />
			<FeaturesBenefits />
			<Solution />
			<CallToAction />
		</div>
		<Footer />
	</main>
  </body>
</html>
