---
const { variant, title } = Astro.props;

const variantStyles = {
  primary:
    "f5 button primary link br3 ba b--neutral-800 ph3 pv2 dib white bg-primary-600 flex items-center justify-center",
  secondary: "f5 button link br3 ph3 pv2 dib white bg-neutral-800",
  disabled: "f5 button br3 ph3 pv2 dib gray bg-neutral-200 disabled",
  minimal: "f5 button link br3 ph3 pv2 dib black bg-transparent",
  outline: "f5 button link br3 ph3 ba pv2 dib black bg-transparent b--black",
  hyperminimal: "fb link ph3 dib pv2",
  "primary-outline":
    "f5 button link br3 bw1 fw5 ph3 ba pv2 dib primary-600 bg-transparent b-primary-600",
};
---

<style>
  a {
    color: currentColor;
    cursor: pointer;
  }

  .disabled {
    pointer-events: none;
  }

  .primary {
    height: 45px;
    width: 145px;
  }
</style>
<a class={variantStyles[variant] + " " + Astro.props.class} {...Astro.props}
  >{title}</a
>
