<canvas id="maki-animation" width="600" height="600"></canvas>
<script is:inline src="https://unpkg.com/@rive-app/canvas@2.20.0"></script>
<script>
    const r = new rive.Rive({
        src: '/rive/lucky_cat_02.riv',
        canvas: document.getElementById('maki-animation'),
        autoplay: true,
        stateMachines: 'State Machine 1',
        layout: new rive.Layout({
            fit: rive.Fit.FitWidth, // Change to: rive.Fit.Contain, or Cover
            alignment: rive.Alignment.Center,
        }),
        onLoad: () => {
            // Prevent a blurry canvas by using the device pixel ratio
            r.resizeDrawingSurfaceToCanvas();
        },
    });
</script>
  